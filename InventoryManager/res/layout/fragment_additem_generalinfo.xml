        <EditText
            android:id="@+id/AIGI_Category"
            style="@style/Editext_FWLeftGravity"
            android:hint="@string/AIGI_Category"
            android:maxLength="5" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LayLocation"
        style="@style/FillWrap"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/AIGI_Txt_Location"
            style="@style/TextViewLable"
