        <EditText
            android:id="@+id/AIGI_ItemCode"
            style="@style/Editext_FWLeftGravity"
            android:hint="@string/AIGI_ItemCode"
            android:maxLength="5" />
    </LinearLayout>
        <LinearLayout
        android:id="@+id/LayName"
        style="@style/FillWrap"
        android:orientation="vertical" >

